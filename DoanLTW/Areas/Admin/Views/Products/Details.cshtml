@model DoanLTW.Models.Product

@{
    ViewBag.Title = "Details";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Details Product</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Details Product</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<div>
    <div class="row">
        <div class="col-sm-5">
            <img src="~/images/shop/@Html.DisplayFor(model => model.ProImage)" class="img-thumbnail" style="width:457px;height:100%; padding: 10px 60px;" alt="Image of @Html.DisplayNameFor(model => model.ProImage)">
        </div>
        <div class="col-sm-7">
            <p class="text-ttdetail">@Html.DisplayFor(model => model.Category.CatName)</p>
            <p class="text-ttdetail">@Html.DisplayFor(model => model.ProName) - @Html.DisplayFor(model => model.SetName)</p>
            <p style="color:#908e8e;margin-top:-10px; padding-bottom:8px">@Html.DisplayFor(model => model.SetName)</p>
            <p class="text-contentdl"><strong>Card Number : @Html.DisplayFor(model => model.ProNumber) </strong></p>
            <p class="text-contentdl"><strong>Card Type : @Html.DisplayFor(model => model.CardType)</strong></p>
            <p style="font-size:16px"><strong class="text-contentdl">Attack 1 : </strong>@Html.DisplayFor(model => model.AttackPower1)</p>
            <p style="font-size:16px"><strong class="text-contentdl">Attack 2 : </strong>@Html.DisplayFor(model => model.AttackPower2)</p>
            <p style="font-size:26px; font-weight:600;color:#0376a9; margin-bottom:50px"><strong class="text-contentdl">Price: </strong>$ @Html.DisplayFor(model => model.MarketPrice)</p>
            <p>
            </p>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ProId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
