@model IEnumerable<DoanLTW.Models.Product>

@{
    ViewBag.Title = "Index";
}



<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Product</h1>
                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Products</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Danh sach don hang</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                              
                                <th>
                                    @Html.DisplayNameFor(model => model.ProName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ProImage)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Price)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Category.CatName)
                                </th>
                                <th>Nhom lenh</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProName)
                                    </td>
                                    <td>
                                        <img class="img-responsive" src="~/images/shop/@item.ProImage" width="100" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Category.CatName)
                                    </td>
                                    <td>
                                        @*@if (User.IsInRole("Admin"))
                                        {*@
                                            @Html.ActionLink("Edit", "Edit", new { id = item.ProId }) <text>|</text>
                                            @Html.ActionLink("Delete", "Delete", new { id = item.ProId }) <text>|</text>
                                        @*}*@
                                        @Html.ActionLink("Details", "Details", new { id = item.ProId })
                                    </td>
                                </tr>
                            }

                        </tbody>

                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->

        </div>
    </div>
</section>
